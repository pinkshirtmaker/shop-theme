<section class="main-reset-password">
  <div class="container">
    <div class="grid no-gutter margin">
      <div class="col xs12 m4 offset-m4">
        {% form 'reset_customer_password' %}
          <h1 class="text-h4">{{ 'sections.main_reset_password.title' | t }}</h1>

          {{ form.errors | default_errors }}

          <div class="form-group">
            <div class="form-group__field styled-field">
              <label for="{{ section.id | append: '-password' }}">
                {{ 'sections.main_reset_password.password' | t }}
              </label>

              <input
                id="{{ section.id | append: '-password' }}"
                name="customer[password]"
                type="password"
                placeholder="{{ 'sections.main_reset_password.password' | t }}"
              >
            </div>

            <div class="form-group__field styled-field">
              <label for="{{ section.id | append: '-password-confirmation' }}">
                {{ 'sections.main_reset_password.password_confirmation' | t }}
              </label>

              <input
                id="{{ section.id | append: '-password-confirmation' }}"
                name="customer[password_confirmation]"
                type="password"
                placeholder="{{ 'sections.main_reset_password.password_confirmation' | t }}"
              >
            </div>

            <div class="form-group__footer">
              <button class="button">{{ 'sections.main_reset_password.submit' | t }}</button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>
