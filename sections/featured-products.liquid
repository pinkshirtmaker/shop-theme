{% liquid
  assign products = section.settings.products
  assign limit = null

  unless section.settings.collection == blank
    assign products = section.settings.collection.products
    assign limit = section.settings.collection_product_limit
  endunless
%}

{% render 'product-slider', heading: section.settings.heading, products: products, limit: limit %}

{% schema %}
{
  "name": "t:sections.featured-products.name",
  "class": "section-spacing",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:presets.settings.heading.label",
      "default": "Heading text"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "t:presets.settings.products.label"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:presets.settings.collection.label",
      "info": "t:presets.settings.collection.info"
    },
    {
      "type": "range",
      "id": "collection_product_limit",
      "label": "t:presets.settings.collection_product_limit.label",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-products.name"
    }
  ]
}
{% endschema %}
