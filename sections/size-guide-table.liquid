{{ 'size-guide-table.css' | asset_url | stylesheet_tag }}

{% liquid
  assign row_headings = ''
  assign default_block = section.blocks.first
  assign has_link_block_1 = false
  assign has_link_block_2 = false

  for block in section.blocks
    assign rows = block.settings.measurements | newline_to_br | split: '<br />'

    for row in rows
      assign heading = row | split: ' - ' | first | strip

      unless row_headings contains heading
        if row_headings == ''
          assign row_headings = heading
        else
          assign row_headings = row_headings | append: ', ' | append: heading
        endif
      endunless
    endfor
  endfor

  assign row_headings = row_headings | split: ', '
%}

{% unless section.settings.link_block_1_heading == empty
  and section.settings.link_block_1_button_label == empty
  or section.settings.link_block_1_button_url == null
%}
  {% assign has_link_block_1 = true %}
{% endunless %}

{% unless section.settings.link_block_2_heading == empty
  and section.settings.link_block_2_button_label == empty
  or section.settings.link_block_2_button_url == null
%}
  {% assign has_link_block_2 = true %}
{% endunless %}

<size-guide-table class="size-guide-table" block-count="{{ section.blocks.size }}" has-header-column>
  <div class="container">
    <div class="size-guide-table__grid">
      {% unless section.settings.heading == empty %}
        <div class="size-guide-table__content">
          <{{ section.settings.heading_tag }} class="text-h4 no-margin">
            {{- section.settings.heading | newline_to_br -}}
          </{{ section.settings.heading_tag }}>
        </div>
      {% endunless %}

      <div class="size-guide-table__units">
        <button
          class="button-reset size-guide-table__unit is-active"
          type="button"
          data-target="size-guide-table.unit"
          data-multiplier="1"
        >
          <span class="text-subheading-l">{{ 'sections.size_guide_table.units.inch' | t }}</span>
        </button>

        <button
          class="button-reset size-guide-table__unit"
          type="button"
          data-target="size-guide-table.unit"
          data-multiplier="2.54"
        >
          <span class="text-subheading-l">{{ 'sections.size_guide_table.units.centimetre' | t }}</span>
        </button>
      </div>

      <ul class="list-reset size-guide-table__block-list">
        {% for block in section.blocks %}
          <li>
            <button
              class="button-reset size-guide-table__block-button"
              type="button"
              data-target="size-guide-table.block-button"
              data-block-index="{{ forloop.index0 }}"
            >
              {{ block.settings.heading }}
            </button>
          </li>
        {% endfor %}
      </ul>

      <div class="size-guide-table__images">
        <div
          class="size-guide-table__images-nav {% unless default_block.settings.front_image and default_block.settings.back_image %}is-hidden{% endunless %}"
          data-target="size-guide-table.images-nav"
        >
          <button
            class="button-reset size-guide-table__image-button text-subheading is-active"
            type="button"
            data-target="size-guide-table.front-image-button"
          >
            {{ 'sections.size_guide_table.front_image' | t }}
          </button>

          <button
            class="button-reset size-guide-table__image-button text-subheading"
            type="button"
            data-target="size-guide-table.back-image-button"
          >
            {{ 'sections.size_guide_table.back_image' | t }}
          </button>
        </div>

        <div class="size-guide-table__image is-active" data-target="size-guide-table.front-image">
          {% if default_block.settings.front_image %}
            {{ default_block.settings.front_image | image_url: height: 1420.92, width: 1136 | image_tag }}
          {% endif %}
        </div>

        <div class="size-guide-table__image" data-target="size-guide-table.back-image">
          {% if default_block.settings.back_image %}
            {{ default_block.settings.back_image | image_url: height: 1420.92, width: 1136 | image_tag }}
          {% endif %}
        </div>
      </div>

      <div class="size-guide-table__nav">
        <button
          class="button-reset size-guide-table__nav-button"
          type="button"
          data-target="size-guide-table.previous"
          title="{{ 'sections.size_guide_table.navigation.previous' | t }}"
        >
          {% render 'icon-direction', icon: 'arrow-left' %}
        </button>

        <button
          class="button-reset size-guide-table__nav-button"
          type="button"
          data-target="size-guide-table.next"
          title="{{ 'sections.size_guide_table.navigation.next' | t }}"
        >
          {% render 'icon-direction', icon: 'arrow-right' %}
        </button>
      </div>

      <div class="size-guide-table__table">
        <table data-target="size-guide-table.table">
          <thead>
            <tr>
              <th>{{ section.settings.header_column_name }}</th>

              {% for block in section.blocks %}
                <th data-block-index="{{ forloop.index0 }}">{{ block.settings.heading }}</th>
              {% endfor %}
            </tr>
          </thead>

          <tbody>
            {% for row_heading in row_headings %}
              <tr>
                <td>{{ row_heading }}</td>

                {% for block in section.blocks %}
                  {% liquid
                    assign block_row_value = null
                    assign block_rows = block.settings.measurements | newline_to_br | split: '<br />'

                    for block_row in block_rows
                      assign block_row_heading = block_row | split: ' - ' | first | strip

                      if row_heading == block_row_heading
                        assign block_row_value = block_row | split: ' - ' | last
                      endif
                    endfor
                  %}

                  <td
                    data-block-index="{{ forloop.index0 }}"
                    data-value="{{ block_row_value }}"
                    data-target="size-guide-table.value"
                  >
                    {{ block_row_value }}
                  </td>
                {% endfor %}
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      {% unless section.settings.button_label == empty or section.settings.button_url == null %}
        <a class="size-guide-table__button text-button" href="{{ section.settings.button_url }}">
          {{- section.settings.button_label }}
          {% render 'growing-arrow' -%}
        </a>
      {% endunless %}
    </div>

    {% if has_link_block_1 or has_link_block_2 %}
      <div class="size-guide-table__blocks">
        {% if has_link_block_1 %}
          <div class="size-guide-block">
            {% unless section.settings.link_block_1_heading == empty %}
              <p class="text-h4">{{ section.settings.link_block_1_heading }}</p>
            {% endunless %}

            {% unless section.settings.link_block_1_button_label == empty
              or section.settings.link_block_1_button_url == null
            %}
              <a class="text-button" href="{{ section.settings.link_block_1_button_url }}">
                {{- section.settings.link_block_1_button_label }}
                {% render 'growing-arrow' -%}
              </a>
            {% endunless %}
          </div>
        {% endif %}

        {% if has_link_block_2 %}
          <div class="size-guide-block size-guide-block--light">
            {% unless section.settings.link_block_2_heading == empty %}
              <p class="text-h4">{{ section.settings.link_block_2_heading }}</p>
            {% endunless %}

            {% unless section.settings.link_block_2_button_label == empty
              or section.settings.link_block_2_button_url == null
            %}
              <a class="text-button" href="{{ section.settings.link_block_2_button_url }}">
                {{- section.settings.link_block_2_button_label }}
                {% render 'growing-arrow' -%}
              </a>
            {% endunless %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>

  <script type="application/json" data-target="size-guide-table.block-data">
    [
      {% for block in section.blocks %}
        {% capture front_image %}
          {% if block.settings.front_image %}
            {{ block.settings.front_image | image_url: height: 1420.92, width: 1136 | image_tag | json }}
          {% else %}
            null
          {% endif %}
        {% endcapture %}

        {% capture back_image %}
          {% if block.settings.back_image %}
            {{ block.settings.back_image | image_url: height: 1420.92, width: 1136 | image_tag | json }}
          {% else %}
            null
          {% endif %}
        {% endcapture %}

        {
          "front_image": {{ front_image }},
          "back_image": {{ back_image }}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  </script>
</size-guide-table>

{% schema %}
{
  "name": "t:sections.size-guide-table.name",
  "class": "size-guide-table-section section-margin",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "t:presets.settings.heading.label",
      "default": "Find your size\n\nStart by selecting your usual collar size. Then check if other measurements fit you."
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "t:presets.settings.heading_tag.label",
      "options": [
        { "value": "h1", "label": "t:presets.settings.heading_tag.options.h1.label" },
        { "value": "h2", "label": "t:presets.settings.heading_tag.options.h2.label" },
        { "value": "h3", "label": "t:presets.settings.heading_tag.options.h3.label" },
        { "value": "h4", "label": "t:presets.settings.heading_tag.options.h4.label" },
        { "value": "h5", "label": "t:presets.settings.heading_tag.options.h5.label" },
        { "value": "h6", "label": "t:presets.settings.heading_tag.options.h6.label" }
      ],
      "default": "h3"
    },
    {
      "type": "text",
      "id": "header_column_name",
      "label": "t:sections.size-guide-table.settings.header_column_name.label",
      "default": "Size"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "t:presets.settings.button_label.label",
      "default": "Shop all"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:presets.settings.button_url.label",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "t:sections.size-guide-table.settings.header__1.content"
    },
    {
      "type": "inline_richtext",
      "id": "link_block_1_heading",
      "label": "t:presets.settings.heading.label",
      "default": "Looking for a <em>tighter fit?</em>"
    },
    {
      "type": "text",
      "id": "link_block_1_button_label",
      "label": "t:presets.settings.button_label.label",
      "default": "Check out our athletic shirts"
    },
    {
      "type": "url",
      "id": "link_block_1_button_url",
      "label": "t:presets.settings.button_url.label",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "t:sections.size-guide-table.settings.header__2.content"
    },
    {
      "type": "inline_richtext",
      "id": "link_block_2_heading",
      "label": "t:presets.settings.heading.label",
      "default": "Looking for a <em>looser fit?</em>"
    },
    {
      "type": "text",
      "id": "link_block_2_button_label",
      "label": "t:presets.settings.button_label.label",
      "default": "Check out our classic shirts"
    },
    {
      "type": "url",
      "id": "link_block_2_button_url",
      "label": "t:presets.settings.button_url.label",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "size",
      "name": "Size",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "measurements",
          "label": "Measurements",
          "info": "Add each measurement name, a dash, followed by the number in inches, to a new line"
        },
        {
          "type": "image_picker",
          "id": "front_image",
          "label": "Front image"
        },
        {
          "type": "image_picker",
          "id": "back_image",
          "label": "Back image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.size-guide-table.name"
    }
  ]
}
{% endschema %}
