<section class="main-activate-account">
  <div class="container">
    <div class="grid no-gutter margin">
      <div class="col xs12 m4 offset-m4">
        {% form 'activate_customer_password' %}
          <h1 class="text-h4">{{ 'sections.main_activate_account.title' | t }}</h1>
          <p class="text-body-small margin">{{ 'sections.main_activate_account.subtitle' | t }}</p>

          {{ form.errors | default_errors }}

          <div class="form-group">
            <div class="form-group__field styled-field">
              <label for="{{ section.id | append: '-password' }}">
                {{ 'sections.main_activate_account.password' | t }}
              </label>

              <input
                id="{{ section.id | append: '-password' }}"
                name="customer[password]"
                type="password"
                placeholder="{{ 'sections.main_activate_account.password' | t }}"
              >
            </div>

            <div class="form-group__field styled-field">
              <label for="{{ section.id | append: '-password-confirmation' }}">
                {{ 'sections.main_activate_account.password_confirmation' | t }}
              </label>

              <input
                id="{{ section.id | append: '-password-confirmation' }}"
                name="customer[password_confirmation]"
                type="password"
                placeholder="{{ 'sections.main_activate_account.password_confirmation' | t }}"
              >
            </div>

            <div class="form-group__footer">
              <button class="button">{{ 'sections.main_activate_account.submit' | t }}</button>

              <button class="text-link button-reset" name="decline">
                {{ 'sections.main_activate_account.decline' | t }}
              </button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>
